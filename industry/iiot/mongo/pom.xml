<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>com.hazelcast.platform.demos.industry.iiot</groupId>
		<artifactId>iiot-root</artifactId>
		<version>5.0</version>
	</parent>

	<artifactId>iiot-mongo</artifactId>

	<name>Hazelcast Platform - IIOT - Mongo (1 replica:DEV)</name>
	<description>Re-package Mongo</description>

	<properties>
		<docker.image.name>mongo</docker.image.name>
		<main.basedir>${project.parent.parent.parent.basedir}</main.basedir>
		<my.mongo.collection1.name>serviceHistory</my.mongo.collection1.name>
	</properties>

	<build>
		<resources>
			<resource>
				<directory>src/main/resources</directory>
				<filtering>true</filtering>
			</resource>
		</resources>

		<plugins>
			<plugin>
				<groupId>com.spotify</groupId>
				<artifactId>dockerfile-maven-plugin</artifactId>
			</plugin>
		</plugins>
	</build>
</project>
