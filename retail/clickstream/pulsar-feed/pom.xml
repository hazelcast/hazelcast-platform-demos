<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>com.hazelcast.platform.demos.retail.clickstream</groupId>
		<artifactId>clickstream-root</artifactId>
		<version>5.2</version>
	</parent>

	<artifactId>clickstream-pulsar-feed</artifactId>

	<name>Hazelcast Platform - Clickstream - Pulsar Feed</name>
	<description>Feeds data to Pulsar</description>

	<properties>
		<docker.image.name>pulsar-feed</docker.image.name>
		<docker.jar.file>${project.artifactId}-${project.version}.jar</docker.jar.file>
		<main.basedir>${project.parent.parent.parent.basedir}</main.basedir>
	</properties>

	<dependencies>
		<dependency>
			<groupId>${project.groupId}</groupId>
			<artifactId>clickstream-common</artifactId>
			<version>${project.version}</version>
		</dependency>

		<!-- Only for Tuple4 -->
		<dependency>
			<groupId>com.hazelcast</groupId>
			<artifactId>hazelcast-enterprise</artifactId>
		</dependency>

		<dependency>
			<groupId>org.apache.pulsar</groupId>
			<artifactId>pulsar-client</artifactId>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.springframework.boot</groupId>
				<artifactId>spring-boot-maven-plugin</artifactId>
			</plugin>
			<plugin>
				<groupId>com.spotify</groupId>
				<artifactId>dockerfile-maven-plugin</artifactId>
			</plugin>
		</plugins>
	</build>
</project>
